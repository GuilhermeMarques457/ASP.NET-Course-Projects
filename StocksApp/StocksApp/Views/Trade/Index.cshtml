@model BuyOrderRequest

@{
    ViewBag.Title = "StockTradesInformation";
}

<section class="trade-section grid grid--2--cols">
    <div class="grid grid--2--cols grid-vertical-center">
        <div>
            <h3 class="stock-name heading-tertiary mg-bt-md">@ViewBag.StockTrade.StockName (@ViewBag.StockTrade.StockSymbol)</h3>
            <span class="stock-price subheading"><small>$</small>@ViewBag.StockTrade.Price</span>
        </div>
        <div>
            <img src="@ViewBag.StockTrade.Image" alt="stock image" class="stock-img" />
        </div>
        
    </div>
    <div class="action-box">
        <h3 class="new-order-text mg-bt-md">New Order</h3>

        <form method="post">
            <div class="input-box">
                <div class="flex ">
                    <label asp-for="Quantity">Quantity:</label>
                    <input class="input-quantity" asp-for="Quantity" />
                </div>
                <span asp-validation-for="Quantity"></span>
            </div>
           

            <div class="mg-tp-md">
                <button type="submit" class="btn btn-sell mg-rg-md" asp-controller="Trade" asp-action="SellOrder">Sell</button>
                <button type="submit" class="btn btn-buy " asp-controller="Trade" asp-action="BuyOrder">Buy</button>
            </div>

            <input type="hidden" name="Price" value="@ViewBag.StockTrade.Price" />
            <input type="hidden" name="StockName" value="@ViewBag.StockTrade.StockName" />
            <input type="hidden" name="StockSymbol" value="@ViewBag.StockTrade.StockSymbol" />

        </form>
    </div>
</section>
